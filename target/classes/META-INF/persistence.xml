<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="persistenceUnit"
        transaction-type="RESOURCE_LOCAL">

        <class>com.myjpa.sample.domain.Client</class>
        <class>com.myjpa.sample.domain.ClientAnswer</class>
        <class>com.myjpa.sample.domain.ClientAnswerPK</class>
        <class>com.myjpa.sample.domain.Question</class>
        <class>com.myjpa.sample.domain.QuestionAnswer</class>
        <class>com.myjpa.sample.domain.QuestionAnswerPK</class>
        <properties>

            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/myjpa" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="admin@123" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name = "hibernate.show_sql" value = "true" />
        </properties>

    </persistence-unit>
</persistence>